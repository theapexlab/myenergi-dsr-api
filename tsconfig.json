{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "commonJS",
    "outDir": "./lambda/dist",
    "strict": false,
    "target": "es2017",
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["./lambda/src/**/*", "./lambda/src/**/*.json"],
  "exclude": ["./lambda/src/**/*.test.ts"]
}
