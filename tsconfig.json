{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "commonJS",
    "outDir": "./lambda/dist",
    "strict": false,
    "target": "es2017",
    "typeRoots": ["src/@types", "node_modules/@types", "../node_modules/@types"],
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./lambda/src/**/*"],
  "exclude": ["./lambda/src/**/*.test.ts"]
}
