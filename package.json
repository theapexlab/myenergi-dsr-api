{
  "name": "demand_side_response",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:theapexlab/myenergi-dsr-api.git",
  "engineStrict": true,
  "engines": {
    "node": "14.19",
    "npm": "please-use-yarn",
    "yarn": "1.22"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "tsnd --respawn --transpile-only src/server.ts",
    "lint": "eslint --ext .js,.ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "build:aggregator": "tsc --project tsconfig.aggregator.json",
    "build:admin": "tsc --project tsconfig.admin.json",
    "build:layer": "yarn install --prod --modules-folder dist_layer/nodejs/node_modules",
    "postbuild:admin": "cp -r src/public ./dist_admin_api",
    "prebuild": "run-p cleanup:*",
    "build": "run-p build:*",
    "cleanup:layer": "rm -fr dist_layer",
    "cleanup:aggregator": "rm -rf dist_aggregator_api",
    "cleanup:admin": "rm -rf dist_admin_api",
    "test:watch": "jest --watch",
    "test": "jest",
    "test:postman": "yarn newman run test/postman/postman_collection.json -e test/postman/postman_environment.json",
    "tf:init": "terraform -chdir=./terraform init -var-file ./config/terraform.tfvars",
    "tf:validate": "terraform -chdir=./terraform validate",
    "tf:plan": "terraform -chdir=./terraform plan -var-file ./config/terraform.tfvars",
    "tf:apply": "terraform -chdir=./terraform apply -var-file ./config/terraform.tfvars",
    "tf:destroy": "terraform -chdir=./terraform destroy -var-file ./config/terraform.tfvars",
    "deploy": "yarn build && yarn tf:apply",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config",
    "hasura:console": "yarn hasura console --project hasura --envfile ../.env",
    "hasura:metadata:apply": "yarn  hasura metadata apply --project hasura --envfile ../.env",
    "hasura:migrate:apply": "yarn hasura migrate apply --database-name dsr-db --project hasura --envfile ../.env",
    "hasura:squash": "yarn hasura migrate squash  --database-name dsr-db --project hasura --envfile ../.env",
    "hasura:mark:squash": "yarn hasura migrate apply --skip-execution --database-name dsr-db  --project hasura --envfile ../.env",
    "hasura:status": "yarn hasura migrate status --database-name dsr-db  --project hasura --envfile ../.env",
    "hasura:seed": "yarn hasura seed apply --project hasura --envfile ../.env",
    "docker:start": "docker-compose up graphql-engine -d",
    "docker:stop": "docker-compose down -v"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-graphql-request": "^4.3.7",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@types/aws-lambda": "^8.10.92",
    "@types/aws-sdk": "^2.7.0",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/newman": "^5.3.0",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "apollo-server-express": "^3.6.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "hasura-cli": "^2.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "newman": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.58.0",
    "@graphql-tools/schema": "^8.3.1",
    "apollo-datasource": "^3.3.1",
    "apollo-server-lambda": "^3.6.3",
    "aws-jwt-verify": "^3.0.0",
    "axios": "^0.26.1",
    "class-validator": "^0.13.2",
    "convict": "^6.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-basic-auth": "^1.2.1",
    "express-jwt": "^7.6.2",
    "graphql": "^15.3.0",
    "graphql-request": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "sofa-api": "^0.11.0",
    "swagger-ui-express": "^4.3.0",
    "type-graphql": "^1.1.1"
  }
}
