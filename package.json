{
  "name": "demand_side_response",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:theapexlab/myenergi-dsr-api.git",
  "engineStrict": true,
  "engines": {
    "node": "14.19",
    "npm": "please-use-yarn",
    "yarn": "1.22.17"
  },
  "scripts": {
    "prestart": "yarn generate:swagger",
    "start": "ts-node-dev --respawn --transpile-only ./lambda/src/server.ts",
    "lint": "eslint --ext .js,.ts,.tsx ./lambda/src/",
    "generate:swagger": "ts-node lambda/scripts/generate-swagger.ts",
    "prebuild:lambda": "yarn cleanup:lambda && yarn generate:swagger",
    "build:lambda": "tsc",
    "prebuild:layer": "yarn cleanup:layer",
    "build:layer": "yarn install --prod --modules-folder dist_layer/nodejs/node_modules",
    "build": "yarn build:layer && yarn build:lambda",
    "test:watch": "jest --watch",
    "test": "jest",
    "cleanup:layer": "rm -fr dist_layer",
    "cleanup:lambda": "rm -rf dist",
    "tf:init": "terraform -chdir=./terraform init -var-file ./config/terraform.tfvars",
    "tf:plan": "terraform -chdir=./terraform plan -var-file ./config/terraform.tfvars",
    "tf:apply": "terraform -chdir=./terraform apply -var-file ./config/terraform.tfvars",
    "tf:destroy": "terraform -chdir=./terraform destroy -var-file ./config/terraform.tfvars"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "apollo-server-express": "^3.6.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "apollo-datasource-rest": "^3.5.1",
    "apollo-server-lambda": "^3.6.3",
    "aws-sdk": "^2.1071.0",
    "class-validator": "^0.13.2",
    "express": "^4.17.2",
    "graphql": "^15.3.0",
    "reflect-metadata": "^0.1.13",
    "sofa-api": "^0.11.0",
    "swagger-ui-express": "^4.3.0",
    "type-graphql": "^1.1.1"
  }
}
